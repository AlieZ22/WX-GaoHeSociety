	}


.panel{
	background-color:#fff;
	margin-top:10px;
	position:relative;
	overflow:hidden
}

.panel:first-child{
	margin-top:0
}

.panel:before{
	top:0;
	border-top:1rpx solid rgba(0,0,0,.1)
}

.panel:after,.panel:before{
	content:" ";
	position:absolute;
	left:0;
	right:0;
	height:1px;
	color:rgba(0,0,0,.1)
}

.panel:after{
	bottom:0;
	border-bottom:1rpx solid rgba(0,0,0,.1)
}


